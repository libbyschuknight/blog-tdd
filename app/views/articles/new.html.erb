<h1>New Article</h1>


<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, {placeholder: "Title"} %>

  <%= f.label :description %>
  <%= f.text_field :description, {placeholder: "Description"} %>

  <%= link_to "Submit Article", articles_path %>

<% end %>

